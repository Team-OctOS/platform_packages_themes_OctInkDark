<resources>
    <style name="TextAppearance.Material.Notification.Title" parent="@*android:style/TextAppearance.Material.Notification.Title">
        <item name="android:textSize">@dimen/notification_title_text_size</item>
        <item name="android:textColor">@*common:color/white</item>
    </style>
	
	<style name="TextAppearance.Material.Notification" parent="@*android:style/TextAppearance.Material.Notification">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">#ffbbbbbb</item>
    </style>
	
	<style name="TextAppearance.Material.Notification.Emphasis" parent="@*android:style/TextAppearance.Material.Notification.Emphasis">
        <item name="android:textColor">#66000000</item>
    </style>
	
	<style name="Theme.Material" parent="@*android:style/Theme.Material">
		<item name="android:colorPrimary">@color/primary_material_dark</item>
		<item name="android:panelBackground">@*common:color/octink_2</item>
		<item name="android:detailsElementBackground">@*common:color/octink_2</item>
		<item name="android:colorControlHighlight">@color/ripple_material_dark</item>
		<item name="android:colorAccent">@*common:color/primary_color_dark</item>
    </style>
	
	<style name="Theme.Material.Light" parent="@*android:style/Theme.Material.Light">
		<item name="android:colorBackground">@*common:color/octink_3</item>
		<item name="android:panelBackground">@*common:color/octink_2</item>
		<item name="actionModePopupWindowStyle">@*android:style/Widget.Material.PopupWindow.ActionMode</item>
		<item name="android:colorControlHighlight">@color/ripple_material_light</item>
		<item name="android:actionMenuTextColor">?android:textColorPrimaryInverse</item>
		<item name="android:colorPrimary">@*common:color/octink_3</item>
		<item name="android:colorPrimaryDark">@*common:color/black</item>
		<item name="android:colorAccent">@*common:color/primary_color_dark</item>
		<item name="android:textColorPrimary">@color/primary_text_material_light_akkd</item>
    </style>
	
	<style name="Theme.Material.Settings.BaseDialog" parent="@*android:style/Theme.Material.BaseDialog">
        <item name="android:colorBackground">@*common:color/black</item>
        <item name="android:colorPrimary">@*common:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*common:color/primary_color_dark</item>
        <item name="android:colorAccent">@color/material_deep_teal_500</item>
    </style>
	
	<style name="Theme.Material.Settings.Dialog.BaseAlert" parent="@*android:style/Theme.Material.Light.Dialog.BaseAlert">
        <item name="android:colorBackground">@*common:color/black</item>
        <item name="android:colorPrimary">@*common:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*common:color/primary_color_dark</item>
        <item name="android:colorAccent">@color/material_deep_teal_500</item>
    </style>
	
	<style name="Theme.Material.Settings.CompactMenu" parent="@*android:style/Theme.Material.CompactMenu">
        <item name="android:colorBackground">@*common:color/black</item>
        <item name="android:colorPrimary">@*common:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*common:color/primary_color_dark</item>
        <item name="android:colorAccent">@color/material_deep_teal_500</item>
    </style>
	
	<style name="Theme.Material.Light.Dialog" parent="@*android:style/Theme.Material.BaseDialog" />	
	<style name="Theme.Material.Light.Dialog.MinWidth" parent="@*android:style/Theme.Material.Dialog" />
	<style name="Theme.Material.Light.Dialog.NoActionBar" parent="@*android:style/Theme.Material.Dialog.NoActionBar" />
	<style name="Theme.Material.Light.Dialog.NoActionBar.MinWidth" parent="@*android:style/Theme.Material.Dialog.NoActionBar.MinWidth" />
	<style name="Theme.Material.Light.Dialog.FixedSize" parent="@*android:style/Theme.Material.Dialog.FixedSize" />
	<style name="Theme.Material.Light.Dialog.NoActionBar.FixedSize" parent="@*android:style/Theme.Material.Dialog.NoActionBar.FixedSize" />
	<style name="Theme.Material.Light.DialogWhenLarge" parent="@*android:style/Theme.Material.DialogWhenLarge" />
	<style name="Theme.Material.Light.DialogWhenLarge.NoActionBar" parent="@*android:style/Theme.Material.DialogWhenLarge.NoActionBar" />
	<style name="Theme.Material.Light.Dialog.Presentation" parent="@*android:style/Theme.Material.Dialog.Presentation" />
	<style name="Theme.Material.Light.Panel" parent="@*android:style/Theme.Material.Panel" />	
	<style name="Theme.Material.InputMethod" parent="@*android:style/Theme.Material.InputMethod">
        <item name="android:imeFullscreenBackground">@*android:drawable/screen_background_selector_dark</item>
	</style>
	<style name="Theme.Material.Light.Dialog.Alert" parent="@*android:style/Theme.Material.Dialog.Alert" />
	<style name="Theme.Material.Light.SearchBar" parent="@*android:style/Theme.Material.SearchBar" />
	<style name="Widget.Material.Light.ActionBar.Solid" parent="@*android:style/Widget.Material.ActionBar.Solid" />

	
	<style name="Widget.Material.ListPopupWindow" parent="@*android:style/Widget.Material.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_background_material</item>
    </style>
	
	<style name="Widget.Material.Spinner" parent="@*android:style/Widget.Material.Spinner">
        <item name="android:popupBackground">@drawable/popup_background_material</item>
    </style>
	
	<style name="TextAppearance.Material.DialogWindowTitle" parent="@*android:style/TextAppearance.Material.Title">
		<item name="android:textColor">@*common:color/white</item>
	</style>
	
	<style name="Theme.Material.Settings" parent="@*android:style/Theme.Material">
		<item name="android:background">@*common:color/black</item>
        <item name="android:colorBackground">@*common:color/black</item>
    </style>
	
	<style name="Theme.Material.Settings.Dialog.Presentation" parent="@*android:style/Theme.Material.Settings.Dialog.Presentation">
        <item name="android:colorBackground">@*common:color/black</item>
    </style>
	
	<style name="Theme.Black" parent="@*android:style/Theme.Material">
        <item name="android:colorBackground">@*common:color/black</item>
        <item name="android:windowBackground">@*common:color/black</item>
		<item name="android:colorForegroundInverse">@*common:color/black</item>
    </style>
	
	<!-- Testing -->	
	
	<style name="AlertDialog.Material.Holo" parent="@*android:style/AlertDialog.Material">
        <item name="android:fullDark">@*common:color/octink_2</item>
        <item name="android:topDark">@*common:color/octink_2</item>
        <item name="android:centerDark">@*common:color/octink_2</item>
        <item name="android:bottomDark">@*common:color/octink_2</item>
        <item name="android:fullBright">@*common:color/octink_2</item>
        <item name="android:topBright">@*common:color/octink_2</item>
        <item name="android:centerBright">@*common:color/octink_2</item>
        <item name="android:bottomBright">@*common:color/octink_2</item>
        <item name="android:bottomMedium">@*common:color/octink_2</item>
        <item name="android:centerMedium">@*common:color/octink_2</item>
    </style>
</resources>
